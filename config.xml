<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.portaltec" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>Portal Tec</name>
  <description>
    Sistema Quantum
  </description>
  <author email="contato@redintel.com.br" href="http://www.redintel.com.br">
    Redintel
  </author>
  <!-- all platforms -->
  
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.0" />
  
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <icon src="img/icon.png" />
  <!-- Define o caminho do ícone padrão 'global' com 128px X 128px, o caminho é em relação à pasta www -->
</widget>